if [ $1 ]; then
    if [ $1 = 'l' ];then
        echo "local release mode"
        yog2 release -cmlupwd ../base
    elif [ $1 = 'r' ]; then
        echo "remote release mode"
        yog2 release -cuompd ./output
        scp -rP 22 ./output/* root@192.168.1.14:/home/newbie/newbiecrm/nodecrm/
        rm -rf output
    elif [ $1 = 'rr' ]; then
        echo "remote release mode upload"
        yog2 release -cuompd ./output
        scp -r ./output/* newbie@111.200.241.252:/home/newbie/newbiecrm/nodecrm/
        rm -rf output
    elif [ $1 = 'd' ]; then
        echo "debug release mode"
        yog2 release -cmlupwd debug
    fi
else
    echo "default local mode"
    yog2 release -cmlupwd ../base
fi